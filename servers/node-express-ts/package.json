{
  "name": "angular-cli-skeleton-server",
  "version": "1.0.0",
  "author": "Stefano Cappa",
  "description": "Angular skeleton with angular-cli - server side in Typescript",
  "license": "MIT",
  "homepage": "https://github.com/Ks89",
  "private": true,
  "repository": "https://github.com/Ks89/angular-cli-skeleton",
  "main": "bin/www",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.2.0"
  },
  "scripts": {
    "start": "npm run build && nodemon dist/server.js",
    "build": "npm run build:ts && npm run tslint",
    "build:ts": "tsc",
    "serve": "node dist/server.js",
    "serve:debug": "nodemon --inspect dist/server.js",
    "watch:node": "nodemon dist/server.js",
    "watch:ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "dotenv": "^8.2.0",
    "expect-ct": "^0.3.0",
    "express": "^4.17.1",
    "express-content-length-validator": "^1.0.0",
    "express-rate-limit": "0.0.0-typescript-beta-7",
    "express-session": "^1.17.0",
    "express-slow-down": "^1.3.1",
    "helmet": "^3.21.2",
    "hpp": "^0.2.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.9.36",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.2",
    "@types/express-rate-limit": "^3.3.3",
    "@types/express-session": "^1.15.15",
    "@types/express-slow-down": "^1.1.1",
    "@types/helmet": "0.0.45",
    "@types/hpp": "^0.2.1",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.12.5",
    "@types/nodemailer": "^6.2.2",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.2",
    "cpr": "^3.0.1",
    "cross-env": "^6.0.3",
    "jshint": "^2.10.2",
    "nodemon": "^1.19.4",
    "pm2": "^4.1.2",
    "rimraf": "^3.0.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  }
}
